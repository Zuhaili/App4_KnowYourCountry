    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginTop="55dp"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/ivAttractionImage"
            android:layout_width="137dp"
            android:layout_height="180dp"
            android:src="@drawable/attraction1"/>

        <TextView
            android:id="@+id/tvAttraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Attractions"
            android:textColor="#31326F"
            android:textSize="34sp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/ivFood"
            android:layout_width="124dp"
            android:layout_height="282dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/tvFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/baloo"
            android:text="Food &amp; Dining"
            android:textColor="#31326F"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/ivStaycation"
            android:layout_width="181dp"
            android:layout_height="147dp"
            android:layout_marginTop="350dp"
            android:src="@drawable/staycation" />

        <TextView
            android:id="@+id/tvStaycation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Staycations"
            android:textColor="#31326F"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="410dp"
            android:textSize="34sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#DBF6E9"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_gravity="left|top"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/tvHomeAttraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Home"
            android:textColor="#31326F"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivFavourites_HomePage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:src="@drawable/favourites" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Review"
            android:textColor="#31326F"
            android:layout_gravity="center|bottom"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ivSetting_HomePage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|top"
            android:src="@drawable/setting" />

        <TextView
            android:id="@+id/tvSettingAttraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:fontFamily="@font/baloo"
            android:text="Setting"
            android:textColor="#31326F"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>


