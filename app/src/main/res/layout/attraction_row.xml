<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0E1DB">

    <TextView
        android:id="@+id/tvAttractionContent"
        android:layout_width="364dp"
        android:layout_height="364dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="119dp"
        android:background="@drawable/square" />

    <ImageView
        android:id="@+id/ivAttractionImage"
        android:layout_width="241dp"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:layout_weight="1"
        android:background="@drawable/image_radius" />

    <ImageView
        android:id="@+id/ivRatingStar"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="369dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvAttractionName"
        android:layout_width="322dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:gravity="center|center_vertical"
        android:text="name"
        android:textColor="#31326F" />

    <TextView
        android:id="@+id/tvAttractionSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="Visit Site"
        android:textColor="#31326F" />


</RelativeLayout>