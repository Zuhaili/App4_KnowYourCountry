<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31326F"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Share Your Experience"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/etReview"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="Type Here"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Insert" />

        <Button
            android:id="@+id/btnRetrieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Retrieve" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvReview"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="#DBF6E9">

<!--        <TextView-->
<!--            android:id="@+id/textView14"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="#DBF6E9"-->
<!--            android:text=""-->
<!--            android:textColor="@color/white" />-->

        <ImageView
            android:id="@+id/ivHomeIcon_ReviewPage"
            android:layout_width="70dp"
            android:layout_height="56dp"
            android:layout_gravity="left|top"
            android:src="@drawable/home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Home"
            android:textColor="#31326F"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/ivReviewIcon_ReviewPage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:src="@drawable/favourites"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Review"
            android:textColor="#31326F"
            android:layout_gravity="center|bottom"
            android:textSize="20dp"  />

        <ImageView
            android:id="@+id/ivSettingIcon_ReviewPage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|top"
            android:src="@drawable/setting" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:fontFamily="@font/baloo"
            android:text="Setting"
            android:textColor="#31326F"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>